{
    "name": "test-runner-desktop",
    "version": "0.9.90",
    "description": "Desktop frontend for @applitest/test-runner",
    "main": "src/main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "debug": "electron . --inspect",
        "clean-mac": "rimraf dist",
        "build:win": "electron-builder --win portable",
        "build:mac": "npm run clean-mac && electron-builder --mac dmg --publish=never",
        "build:all": "electron-builder --win portable --mac dmg",
        "dist": "electron-builder --win portable --mac dmg --publish=never",
        "pack": "electron-builder --dir",
        "postinstall": "electron-builder install-app-deps",
        "format:check": "prettier --check .",
        "format:write": "prettier --write .",
        "lint:check": "eslint .",
        "lint:fix": "eslint --fix .",
        "create-cert": "powershell -ExecutionPolicy Bypass -File scripts/create-self-signed-cert.ps1",
        "create-simple-cert": "powershell -ExecutionPolicy Bypass -File scripts/create-simple-cert.ps1",
        "create-enhanced-cert": "powershell -ExecutionPolicy Bypass -File scripts/create-enhanced-cert.ps1",
        "create-github-cert": "powershell -ExecutionPolicy Bypass -File scripts/create-github-cert.ps1",
        "build:win:signed": "npm run create-simple-cert && electron-builder --win portable"
    },
    "keywords": [
        "electron",
        "test-runner",
        "applitest"
    ],
    "author": "Daniel Yaghil",
    "license": "Proprietary",
    "devDependencies": {
        "electron": "^37.2.6",
        "electron-builder": "^25.1.8",
        "eslint": "^9.18.0",
        "eslint-config-prettier": "^10.0.1",
        "prettier": "^3.4.2"
    },
    "dependencies": {
        "@applitest/test-runner": "^0.9.89",
        "archiver-utils": "^5.0.2",
        "axios": "^1.4.0",
        "cors": "^2.8.5",
        "dotenv": "^16.0.0",
        "express": "5.0.1",
        "readable-stream": "^4.7.0",
        "zip-stream": "^7.0.2"
    },
    "build": {
        "appId": "com.applitest.test-runner-desktop",
        "productName": "ApplitestLocalRunner",
        "directories": {
            "output": "dist"
        },
        "compression": "store",
        "removePackageScripts": true,
        "asar": true,
        "protocols": [
            {
                "name": "applitest-protocol",
                "schemes": [
                    "applitest",
                    "http",
                    "https"
                ]
            }
        ],
        "asarUnpack": [
            "node_modules/archiver-utils/**/*",
            "node_modules/zip-stream/**/*",
            "node_modules/archiver/**/*",
            "node_modules/readable-stream/**/*",
            "node_modules/@applitest/test-runner/lib/**/*"
        ],
        "includeSubNodeModules": true,
        "buildDependenciesFromSource": false,
        "files": [
            "src/**/*",
            "build/icon*.png",
            "build/icon*.ico",
            "node_modules/**/*",
            "package.json",
            "!node_modules/**/{test,__tests__,tests,powered-test,example,examples}/**/*",
            "!node_modules/**/*.{md,txt,MD}",
            "!node_modules/**/{LICENSE,license,License}*",
            "!node_modules/**/{CHANGELOG,changelog,History,history}*",
            "!node_modules/**/.{nyc_output,coverage}/**/*",
            "!node_modules/**/coverage/**/*"
        ],
        "extraResources": [],
        "win": {
            "target": [
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "build/icon-256.png",
            "publisherName": "Applitest",
            "requestedExecutionLevel": "asInvoker",
            "signAndEditExecutable": true,
            "verifyUpdateCodeSignature": false,
            "signingHashAlgorithms": [
                "sha256"
            ],
            "certificateFile": "build/applitest-cert.p12",
            "certificatePassword": "",
            "certificateSubjectName": "Applitest",
            "timeStampServer": "http://timestamp.digicert.com"
        },
        "mac": {
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ],
            "icon": "build/icon-512.png",
            "category": "public.app-category.developer-tools",
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "entitlements": "build/entitlements.mac.plist",
            "entitlementsInherit": "build/entitlements.mac.plist",
            "extendInfo": {
                "LSUIElement": false,
                "CFBundleDocumentTypes": [
                    {
                        "CFBundleTypeName": "Applitest Project",
                        "CFBundleTypeExtensions": [
                            "applitest"
                        ]
                    }
                ]
            }
        },
        "dmg": {
            "icon": "build/icon-256.png",
            "background": null,
            "title": "ApplitestLocalRunner",
            "contents": [
                {
                    "x": 130,
                    "y": 220
                },
                {
                    "x": 410,
                    "y": 220,
                    "type": "link",
                    "path": "/Applications"
                }
            ],
            "artifactName": "${productName}-mac.${ext}"
        },
        "portable": {
            "artifactName": "${productName}-win.${ext}"
        }
    }
}
